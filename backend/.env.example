# Database Configuration
# For Supabase: Get from project settings -> Database -> Connection string
# For local PostgreSQL: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://ai_user:your_secure_password@localhost:5432/ai_platform

# Node Environment
NODE_ENV=production

# JWT Configuration
# Generate a secure random string: openssl rand -base64 64
JWT_SECRET=your_very_long_and_secure_jwt_secret_minimum_32_characters

# OpenAI API Configuration
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# Anthropic API Configuration
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Google AI API Configuration
# Get from https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Stripe Configuration
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application URLs
FRONTEND_URL=https://yourdomain.com
NEXTAUTH_URL=https://yourdomain.com

# Redis Configuration (if using external Redis)
REDIS_URL=redis://localhost:6379

# Email Configuration (if using Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_SECRET=another_very_secure_random_string

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads
